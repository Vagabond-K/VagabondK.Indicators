@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode=true Theme="Themes.DefaultTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="appbar-filter" Elevation="0" />
    <MudAppBar Elevation="10" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3" Style="text-wrap-mode: nowrap">Vagabond K's Indicators</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/Vagabond-K/VagabondK.Indicators" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" Elevation="10" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudPaper Square="true" Class="footer">
        <MudContainer Class="py-8">
            <MudGrid Justify="Justify.Center">
                <MudItem xs="12" lg="12">
                    <div style="display:flex;justify-content:center;flex-wrap:wrap">
                        <div class="d-flex align-center my-1">
                            <MudIcon Icon="@Icons.Material.Filled.Mail" Size="Size.Small" Class="me-1" />
                            <a href="mailto:vagabond-k@naver.com"><MudText Typo="Typo.body2" Class="me-4">vagabond-k@naver.com</MudText></a>
                        </div>
                        <div class="d-flex align-center my-1">
                            <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Class="me-1" />
                            <MudText Typo="Typo.body2">Changwon-si, Gyeongsangnam-do, Republic of Korea</MudText>
                        </div>
                    </div>
                    <MudText Typo="Typo.body2" Align="Align.Center" Class="my-1">Copyright © 2024. Vagabond K. All Rights Reserved.</MudText>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudPaper>
</MudLayout>
<MudScrollToTop TopOffset="100">
    <MudFab Color="Color.Dark" StartIcon="@Icons.Material.Filled.KeyboardDoubleArrowUp" />
</MudScrollToTop>
@code {
    bool drawerOpen = true;

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}